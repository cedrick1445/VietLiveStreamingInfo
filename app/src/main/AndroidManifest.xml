<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pam.pammy.pamela.iloveyousomuch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logowifey"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logowifey"
        android:supportsRtl="true"
        android:theme="@style/Theme.ỨngDụngCôGáiXinhĐẹpGợiCảmVàĐángYêuNhất"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup">
        <activity android:name=".activities.HomeWifey"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.FeaturesWifey"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.RiskWifey"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.StepsWifey"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SplashWifey"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>